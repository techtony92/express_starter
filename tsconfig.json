{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",

	"compilerOptions": {
		"rootDir": "./",
		"lib": ["es2021"],
		"module": "ES2022",
		"target": "es2021",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist/",
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	}
}
